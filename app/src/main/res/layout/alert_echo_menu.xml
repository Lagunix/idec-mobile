<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/edit_echoarea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/list_horizontal_margin"
        android:layout_marginStart="@dimen/list_horizontal_margin"
        android:inputType="text"
        android:maxLines="1" />

    <ListView
        android:id="@+id/echo_menu_options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/echo_menu_options" />
</LinearLayout>
