<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/msg_clickable_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:paddingBottom="8dp"
    android:paddingLeft="@dimen/list_horizontal_margin"
    android:paddingRight="@dimen/list_horizontal_margin"
    android:paddingTop="8dp">

    <TextView
        android:id="@+id/msg_subj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/msg_date"
        android:lines="1"
        android:text="Re: Новые какие-то обсуждения каких-то людей о чём-то"
        android:textColor="@color/md_black_1000"
        android:textSize="@dimen/material_text_subhead" />

    <TextView
        android:id="@+id/msg_from_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/msg_subj"
        android:lines="1"
        android:text="someuser -> All"
        android:textColor="@color/md_black_1000"
        android:textSize="@dimen/material_text_body2" />

    <TextView
        android:id="@+id/msg_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="false"
        android:layout_below="@+id/msg_from_to"
        android:layout_toLeftOf="@+id/msg_star"
        android:maxLength="250"
        android:maxLines="2"
        android:text="Большой и длинный текст на много строк, в котором куча разных цитат, мыслей и всего такого"
        android:textSize="@dimen/material_text_body1" />

    <TextView
        android:id="@+id/msg_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="16dp"
        android:text="03.09.16, 17:18"
        android:textSize="@dimen/material_text_caption" />

    <ImageView
        android:id="@+id/msg_star"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/msg_date"
        android:paddingLeft="16dp"
        android:paddingTop="16dp" />

</RelativeLayout>