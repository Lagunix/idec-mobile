<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Когда клиент отписывается от эхоконференции, это совсем не значит, что эха удалена из базы. Если хочется сэкономить место на диске, то ниже можно это сделать" />

        <Spinner
            android:id="@+id/additional_full_echolist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <Button
                android:id="@+id/additional_database_clear_echo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Удалить" />

            <Button
                android:id="@+id/additional_database_export_echoarea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Экспорт в файл бандла" />
        </LinearLayout>

        <TextView
            style="@style/AppTheme.MyCaption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Укоротить эху до максимум N сообщений" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/additional_truncate_echoarea_limit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="numberDecimal" />

            <Button
                android:id="@+id/additional_truncate_echo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Обрезать эху" />
        </LinearLayout>

        <Button
            android:id="@+id/additional_database_clear_all"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Очистить всю базу данных" />

        <Button
            android:id="@+id/additional_clear_xc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Очистить кэш" />

        <TextView
            style="@style/AppTheme.MyCaption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Импорт бандлов сообщений" />

        <Button
            android:id="@+id/additional_select_file_bundle_import"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Выбрать файл" />

    </LinearLayout>
</ScrollView>