<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/help_database_deletion" />

        <Spinner
            android:id="@+id/additional_full_echolist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <Button
                android:id="@+id/additional_database_clear_echo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/action_delete" />

            <Button
                android:id="@+id/additional_database_export_echoarea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/action_echo_export" />
        </LinearLayout>

        <TextView
            style="@style/AppTheme.MyCaption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/action_echo_truncate_summary" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/additional_truncate_echoarea_limit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="numberDecimal" />

            <Button
                android:id="@+id/additional_truncate_echo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/action_echo_truncate" />
        </LinearLayout>

        <Button
            android:id="@+id/additional_database_clear_all"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/action_delete_database" />

        <Button
            android:id="@+id/additional_clear_xc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/action_clear_xc" />

        <TextView
            style="@style/AppTheme.MyCaption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/action_bundle_import" />

        <Button
            android:id="@+id/additional_select_file_bundle_import"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/action_file_choose" />

        <TextView
            style="@style/AppTheme.MyCaption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/action_database_export" />

        <Button
            android:id="@+id/additional_database_export_all"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/start" />

        <TextView
            style="@style/AppTheme.MyCaption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/client_config" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <Button
                android:id="@+id/additional_database_import_config"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/action_config_import" />

            <Button
                android:id="@+id/additional_database_export_config"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/action_config_export" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>