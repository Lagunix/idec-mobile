<resources>
    <!-- Смотрящим в этот файл надо обязательно заглянуть в colors.xml -->

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="navdrawer_picture">@drawable/header_light</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/md_black_1000</item>
        <item name="android:textColorSecondary">@color/md_grey_600</item>
        <item name="textColorDisabled">@color/md_grey_500</item>
        <item name="divider">@color/md_grey_200</item>
        <item name="listItemBGColor">#FFFFFF
        </item> <!-- это нужно для некоторых элементов списков -->
        <item name="menuIconColor">#FFFFFF</item> <!-- ставить обязательно -->
        <item name="material_drawer_header_text_shadow">#00000000</item> <!-- И это тоже! -->

        <!-- Цвета для оформления цитат, постскриптумов и комментариев -->
        <item name="quoteColor">#189818</item>
        <item name="commentColor">#bb0000</item>
        <item name="PSColor">#bb0000</item>

        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="preferenceTheme">@style/AppTheme.Preferences</item>
    </style>

    <style name="AppTheme._Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="navdrawer_picture">@drawable/header_dark</item>

        <!--
        Цвета для темы в своей основе взяты отсюда:
            http://90sigma.deviantart.com/art/Princess-Luna-s-Season-2-Colour-Palette-327397959
        Правда, пришлось поменять некоторое для лучшего отображения и контраста
        -->

        <item name="colorPrimary">#404680</item>
        <item name="colorPrimaryDark">#161D3F</item>
        <item name="colorAccent">@color/theme2_colorAccent</item>
        <item name="android:colorBackground">#070913</item>
        <item name="android:windowBackground">@color/theme2_activityBackground</item>
        <item name="android:itemBackground">#161D3F</item>
        <item name="colorControlHighlight">#396CC8</item>
        <item name="divider">@color/theme2_listDivider</item>
        <item name="menuIconColor">?android:attr/colorForeground</item>

        <item name="material_drawer_background">#161D3F</item>
        <item name="material_drawer_primary_text">#eafffd</item>
        <item name="material_drawer_secondary_text">#eafffd</item>
        <item name="material_drawer_hint_text">@color/material_drawer_dark_hint_text</item>
        <item name="material_drawer_divider">@color/theme2_listDivider</item>
        <item name="material_drawer_selected">#2F55C3</item>
        <item name="material_drawer_selected_text">#eafffd</item>
        <item name="material_drawer_header_selection_text">
            @color/material_drawer_dark_header_selection_text
        </item>
        <item name="material_drawer_primary_icon">@color/material_drawer_dark_primary_icon</item>
        <item name="material_drawer_header_text_shadow">?attr/colorPrimaryDark</item>

        <item name="android:colorForeground">#eafffd</item>
        <item name="android:editTextColor">#eafffd</item>
        <item name="android:textColor">?attr/android:textColorPrimary</item>
        <item name="android:textColorPrimary">#eafffd</item>
        <item name="android:textColorPrimaryInverse">@android:color/primary_text_light</item>
        <item name="android:textColorSecondary">#C7D0FF</item>
        <item name="android:textColorSecondaryInverse">@android:color/secondary_text_light</item>
        <item name="textColorDisabled">#bbc7d0ff</item>

        <item name="listItemBGColor">?android:attr/itemBackground</item>

        <item name="quoteColor">#81FADC</item>
        <item name="commentColor">#d47cbd</item>
        <item name="PSColor">#d47cbd</item>

        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Dark</item>
        <item name="preferenceTheme">@style/AppTheme.Preferences</item>
    </style>

    <style name="AppTheme.Dark" parent="AppTheme._Dark" />

    <style name="AppTheme._TheWhite" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="navdrawer_picture">@drawable/header_c</item>
        <item name="colorPrimary">#FFFFFF</item>
        <item name="colorPrimaryDark">?android:attr/textColorSecondary</item>
        <item name="colorAccent">@color/theme3_colorAccent</item>
        <item name="android:colorBackground">#ffffff</item>
        <item name="android:windowBackground">@color/theme3_activityBackground</item>
        <item name="android:itemBackground">?attr/colorPrimary</item>
        <item name="colorControlHighlight">#fff676</item>
        <item name="divider">@color/theme3_listDivider</item>
        <item name="menuIconColor">#333333</item>

        <item name="material_drawer_background">?android:attr/colorBackground</item>
        <item name="material_drawer_primary_text">#000000</item>
        <item name="material_drawer_secondary_text">#49484A</item>
        <item name="material_drawer_hint_text">@color/material_drawer_hint_text</item>
        <item name="material_drawer_divider">@color/theme3_listDivider</item>
        <item name="material_drawer_selected">#5dc3b2</item>
        <item name="material_drawer_selected_text">#FFFFFF</item>
        <item name="material_drawer_header_selection_text">?attr/material_drawer_primary_text</item>
        <item name="material_drawer_primary_icon">@color/material_drawer_primary_icon</item>
        <item name="material_drawer_header_text_shadow">#FFFFFF</item>

        <item name="android:textColor">?attr/android:textColorPrimary</item>
        <item name="android:colorForeground">@color/md_grey_600</item>
        <item name="android:editTextColor">@color/md_grey_900</item>
        <item name="android:textColorPrimary">#000000</item>
        <item name="android:textColorSecondary">#7CA99F</item>
        <item name="android:textColorSecondaryInverse">@android:color/secondary_text_dark</item>
        <item name="textColorDisabled">#c87ca99f</item>


        <item name="listItemBGColor">?android:attr/itemBackground</item>
        <item name="android:theme">@style/WhiteActionBar</item>

        <item name="quoteColor">#7CA99F</item>
        <item name="commentColor">#42ACD3</item>
        <item name="PSColor">#42ACD3</item>

        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="preferenceTheme">@style/AppTheme.Preferences</item>
    </style>

    <style name="WhiteActionBar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorHint">?attr/quoteColor</item>
        <item name="android:textColorPrimary">?attr/menuIconColor</item>
        <item name="android:textColorSecondary">#7CA99F</item>
    </style>

    <style name="AppTheme.TheWhite" parent="AppTheme._TheWhite" />

    <style name="AppTheme._TomorrowNightEighties" parent="Theme.AppCompat.NoActionBar">
        <!-- Цвета взяты из темы https://github.com/chriskempson/tomorrow-theme -->
        <item name="navdrawer_picture">@drawable/header_tomorrow_night_eighties</item>

        <item name="colorPrimary">#393939</item>
        <item name="colorPrimaryDark">#2d2d2d</item>
        <item name="colorAccent">@color/theme_tomorrow_night_eighties_colorAccent</item>
        <item name="android:colorBackground">#393939</item>
        <item name="android:windowBackground">@color/theme_tomorrow_night_eighties_activityBackground</item>
        <item name="android:itemBackground">#2d2d2d</item>
        <item name="colorControlHighlight">#515151</item>
        <item name="divider">@color/theme_tomorrow_night_eighties_listDivider</item>
        <item name="menuIconColor">?android:attr/colorForeground</item>

        <item name="material_drawer_background">#2d2d2d</item>
        <item name="material_drawer_primary_text">#cccccc</item>
        <item name="material_drawer_secondary_text">#999999</item>
        <item name="material_drawer_hint_text">@color/material_drawer_dark_hint_text</item>
        <item name="material_drawer_divider">@color/theme_tomorrow_night_eighties_listDivider</item>
        <item name="material_drawer_selected">#515151</item>
        <item name="material_drawer_selected_text">#eafffd</item>
        <item name="material_drawer_header_selection_text">
            @color/material_drawer_dark_header_selection_text
        </item>
        <item name="material_drawer_primary_icon">@color/material_drawer_dark_primary_icon</item>
        <item name="material_drawer_header_text_shadow">#00000000</item>

        <item name="android:colorForeground">#eafffd</item>
        <item name="android:editTextColor">#eafffd</item>
        <item name="android:textColor">?attr/android:textColorPrimary</item>
        <item name="android:textColorPrimary">#eafffd</item>
        <item name="android:textColorPrimaryInverse">@android:color/primary_text_light</item>
        <item name="android:textColorSecondary">#cccccc</item>
        <item name="android:textColorSecondaryInverse">@android:color/secondary_text_light</item>
        <item name="textColorDisabled">#bbcccccc</item>


        <item name="listItemBGColor">?android:attr/itemBackground</item>

        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Dark</item>
        <item name="preferenceTheme">@style/AppTheme.Preferences</item>

        <item name="quoteColor">#6699cc</item>
        <item name="commentColor">#999999</item>
        <item name="PSColor">#99cc99</item>
    </style>

    <style name="AppTheme.TomorrowNightEighties" parent="AppTheme._TomorrowNightEighties" />

    <!--
        Всё, что идёт далее, править не имеет смысла.
        Реальные темы оформления и цвета находятся выше
    -->

    <style name="AppTheme.EditTextFullWidth" parent="Widget.AppCompat.EditText">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">@dimen/material_text_subhead</item>
    </style>

    <!-- Стиль для разделителя по типу <hr> -->

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <!-- Стиль для заголовков (используется в GUI настроек, например) -->

    <style name="AppTheme.MyCaption">
        <item name="android:textSize">17sp</item>
        <item name="android:paddingTop">10sp</item>
        <item name="android:textColor">?attr/colorAccent</item>
    </style>

    <style name="AppTheme.Preferences" parent="PreferenceThemeOverlay.v14.Material.Fix">
        <item name="preferenceInformationStyle">@style/AppTheme.PreferenceInfoStyle</item>
        <item name="preferenceStyle">@style/AppTheme.PreferenceStyle</item>

        <item name="android:textColor">@color/primary_text_color_selector</item>
    </style>


    <style name="AppTheme.PreferenceStyle" parent="Preference.Material">
        <item name="android:shouldDisableView">true</item>
    </style>

    <style name="AppTheme.PreferenceInfoStyle" parent="Preference.Information.Material">
        <item name="android:shouldDisableView">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
</resources>
